<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <TextView
        android:id="@+id/TextView_HelpText"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:autoLink="all"
        android:bufferType="spannable"
        android:drawablePadding="@dimen/drawable_padding"
        android:fadingEdge="vertical"
        android:fadingEdgeLength="@dimen/fading_edge_length"
        android:isScrollContainer="true"
        android:linksClickable="true"
        android:padding="@dimen/help_text_padding"
        android:scrollbarStyle="outsideOverlay"
        android:scrollbars="vertical"
        android:textColor="@color/title_color"
        android:textColorLink="@color/logo_color"
        android:textSize="@dimen/help_text_size"
        android:textStyle="italic" >
    </TextView>
    
     <FrameLayout
        android:id="@+id/state_oglasi"
        android:layout_width="match_parent"
        android:layout_height="@dimen/ad_layout_height" 
        android:layout_alignParentBottom="true">

        <com.google.ads.AdView
            android:id="@+id/adView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            ads:adSize="@string/ad_size"
            ads:adUnitId="a1520ba473ee8eb"
            ads:loadAdOnCreate="true" />
    </FrameLayout>
    

</RelativeLayout>