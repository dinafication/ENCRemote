<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <FrameLayout
        android:id="@+id/state_oglasi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >
        <TextView
            android:id="@+id/state_oglasi_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="oglasi" />
    </FrameLayout>

    <RelativeLayout
        android:id="@+id/enc_stanje"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/state_oglasi"
        android:gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/enc_stanje_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="45dp"
            android:layout_centerHorizontal="true"
            android:text="@string/enc_stanje_text" />

        <LinearLayout
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/enc_stanje_text"
	        android:layout_centerHorizontal="true"
	        android:layout_marginTop="14dp"
	        android:orientation="horizontal" >

	        <TextView
	            android:id="@+id/enc_stanje_iznos"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="100,00 kn" />
	        
	        <Button
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:text="rfrsh" />

    </LinearLayout>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="25dp"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/btn_postavke"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/postavke_text" />

        <Button
            android:id="@+id/btn_pomoc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/pomoc_text" />
    </LinearLayout>

</RelativeLayout>